@model NguyenMinhNguyen_Web.Pages.Staff.Type.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
    </dl>
    <br/>
    
    <form method="post">
        <input type="hidden" asp-for="Category.CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Staff/Type/Index">Back to List</a>
    </form>

    @if (Model.ErrorMessage != "")
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</div>
