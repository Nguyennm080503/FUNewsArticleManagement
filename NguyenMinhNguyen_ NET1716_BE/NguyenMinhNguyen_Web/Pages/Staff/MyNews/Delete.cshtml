@page
@model NguyenMinhNguyen_Web.Pages.Staff.MyNews.DeleteModel

@{
    ViewData["Title"] = "Delete News Article";
}

<h1>Delete News Article</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>NewsArticle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.NewsTitle
        </dd>
        <dt class="col-sm-2">
            News Content :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.NewsContent
        </dd>
        <dt class="col-sm-2">
            Status :
        </dt>
        <dd class="col-sm-10">
            @(Model.NewsArticle.NewsStatus == true ? "Active" : "Inactive")
        </dd>
        <dt class="col-sm-2">
            Category :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.Category.CategoryName
        </dd>
        <dt class="col-sm-2">
            Owner :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.CreatedBy.AccountName
        </dd>
        <dt class="col-sm-2">
            Created Date :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.CreatedDate
        </dd>
        <dt class="col-sm-2">
            Modified Date :
        </dt>
        <dd class="col-sm-10">
            @Model.NewsArticle.ModifiedDate
        </dd>
    </dl>
    <br />
    
    <form method="post">
        <input type="hidden" asp-for="NewsArticle.NewsArticleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Staff/MyNews/Index">Back to List</a>
    </form>

    @if (Model.ErrorMessage != "")
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</div>
