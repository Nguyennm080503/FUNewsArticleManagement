@page
@model NguyenMinhNguyen_Web.Pages.Account.DeleteModel

@{
    ViewData["Title"] = "Delete Account";
}

<h1>Delete Account</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Account Name :
        </dt>
        <dd class="col-sm-10">
            @Model.SystemAccount.AccountName
        </dd>
        <dt class="col-sm-2">
            Account Email :
        </dt>
        <dd class="col-sm-10">
            @Model.SystemAccount.AccountEmail
        </dd>
        <dt class="col-sm-2">
            Role :
        </dt>
        <dd class="col-sm-10">
            @(Model.SystemAccount.AccountRole == 1 ? "Staff" : "Lecturer")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SystemAccount.AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Admin/Account/Index">Back to List</a>
    </form>

    @if (Model.ErrorMessage != "")
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</div>
